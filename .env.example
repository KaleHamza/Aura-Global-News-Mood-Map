# --- API KEYS (Lütfen kendi değerlerinizi girin) ---
GOOGLE_API_KEY=your_google_api_key_here
NEWS_API_KEY=your_newsapi_key_here

# --- DATABASE ---
DATABASE_URL=sqlite:///haber_analizi.db
# PostgreSQL için: postgresql://user:password@localhost:5432/aura_db

# --- STREAMLIT SECURITY ---
STREAMLIT_PASSWORD=change_this_password
SECRET_KEY=your_secret_key_for_jwt_tokens_here

# --- ENVIRONMENT ---
ENVIRONMENT=development
# development, staging, production

# --- CACHE SETTINGS ---
CACHE_ENABLED=true
CACHE_TIMEOUT=300

# --- LOG LEVEL ---
LOG_LEVEL=INFO
# DEBUG, INFO, WARNING, ERROR, CRITICAL

# --- API RATE LIMITS ---
NEWSAPI_RATE_LIMIT=1000
REQUEST_TIMEOUT=30

# --- ML MODELS ---
SENTIMENT_MODEL=distilbert-base-uncased-finetuned-sst-2-english
CLASSIFIER_MODEL=valhalla/distilbart-mnli-12-1

# --- MONITORING ---
ENABLE_MONITORING=true
MONITORING_PORT=8000
